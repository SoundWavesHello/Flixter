<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Flixster', root_path, class: 'navbar-brand'%>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item active">
            <a class="nav-link" href="#">Do stuff <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Do other stuff</a>
          </li>
        </ul>

        <%if user_signed_in? %>
          <%= link_to 'Sign out', '#', class: 'nav-link' %>
          <%= link_to 'Your profile', '#', class: 'nav-link' %>
        <%else%>
          <%= link_to 'Sign in', '#', class: 'nav-link' %>
          <%= link_to 'Sign up', '#', class: 'nav-link' %>
        <%end%>

      </div>
    </nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert arert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
